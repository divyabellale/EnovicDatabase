<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Student type</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Father name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Fee status</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= link_to student.name, student %></td>
        <td><%= student.student_type %></td>
        <td><%= student.address1 %></td>
        <td><%= student.village %>,<%= student.post%><br/><%= student.panchayat%>,<%= student.hobli%><br/>
          <%= student.taluq%>,<%= student.district%></td>
        <td><%= student.father_name %></td>
        <td><%= student.phone %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'check', fee_statuses_path(:student_id => student.id) ,:class=>"btn btn-primary"%></td>
        <td><%= student.course.name %></td>
        <td><%= link_to 'Edit', edit_student_path(student) ,:class=>"btn btn-primary"%></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>